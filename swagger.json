{
    "swagger": "2.0",
    "info": {
        "title": "API ESMAD - PW2",
        "description": "Projeto de PW2",
        "version": "1.0"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": [
        "http",
        "https"
    ],
    "paths": {
        "/student/create": {
            "post": {
