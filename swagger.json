                    "name": "Nome",
                    "in": "body",
                    "description": "Nome Completo do Estudante",
                    "required": true,
                    "default": "Marco Marques"
                }],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "JSON"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}